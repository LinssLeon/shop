{% extends 'base.html.twig' %}

{% block title %}Online-Shop
{% endblock %}

{% block body %}
	<!-- Willkommensnachricht -->
	<div class="text-center p-5 bg-gray-800 text-white">
		<h1 class="text-4xl font-bold">Willkommen in unserem Online-Shop!</h1>
		<p class="lead text-lg">Entdecken Sie unsere exklusiven Angebote und besonderen Produkte.</p>
	</div>

	<!-- Slideshow für Featured-Produkte -->
	<div class="relative mt-4">
		<div class="overflow-hidden relative h-96">
			<div class="flex transition-transform duration-500 ease-in-out" id="slider">
				{% for product in featuredProducts %}
					<div class="min-w-full relative flex flex-col items-center">
						<a href="{{ path('product_show', { 'id': product.id }) }}">
							<img src="{{ asset('uploads/images/products/' ~ product.image) }}" class="max-w-full max-h-80 object-contain" alt="{{ product.name }}">
						</a>
						<div class="text-center p-4">
							<h5 class="font-semibold">{{ product.name }}</h5>
							<p class="font-bold">{{ product.price|number_format(2, ',', '.') }}€</p>
							<a class="bg-blue-500 text-white px-4 py-2 rounded mt-3 inline-block" href="{{ path('product_show', { 'id': product.id }) }}">Zum Produkt</a>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
		<button class="absolute top-1/2 left-0 transform -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full" id="prevBtn">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
			</svg>
		</button>
		<button class="absolute top-1/2 right-0 transform -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full" id="nextBtn">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
			</svg>
		</button>
	</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/slider.js') }}"></script>
{% endblock %}
