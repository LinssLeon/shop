{% extends 'base.html.twig' %}

{% block title %}Einloggen
{% endblock %}

{% block body %}
	<div class="container mx-auto mt-5 d-flex flex-col min-h-screen">
		<h2 class="text-center text-2xl font-bold">Einloggen</h2>
		<div class="row justify-center flex-grow">
			<div class="col-md-6">
				{% if error %}
					<div class="alert alert-danger mb-4">
						{{ error.messageKey|trans(error.messageData, 'security') }}
					</div>
				{% endif %}
				<form action="{{ path('app_login') }}" method="post" class="bg-white p-6 rounded shadow-md">
					<div class="mb-4">
						<label for="username" class="block text-sm font-medium">Benutzername</label>
						<input type="text" id="username" name="_username" class="form-control mt-1 block w-full p-2 border border-gray-300 rounded" value="{{ last_username }}" required autofocus>
					</div>
					<div class="mb-4">
						<label for="password" class="block text-sm font-medium">Passwort</label>
						<input type="password" id="password" name="_password" class="form-control mt-1 block w-full p-2 border border-gray-300 rounded" required>
					</div>
					<div class="mb-4 flex items-center">
						<input type="checkbox" id="remember_me" name="_remember_me" class="mr-2">
						<label for="remember_me" class="text-sm">Angemeldet bleiben</label>
					</div>
					<div class="flex justify-between mb-4">
						<button type="submit" class="btn btn-primary px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700">Einloggen</button>
						<a href="{{ path('app_register') }}" class="btn btn-success px-4 py-2 rounded bg-green-600 text-white hover:bg-green-700">Noch keinen Account?</a>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
