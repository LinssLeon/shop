{% extends 'base.html.twig' %}

{% block title %}Konto
{% endblock %}

{% block body %}
	<div class="container mx-auto mt-5 flex flex-col min-h-screen">
		<h2 class="text-center text-3xl font-bold mb-6">Konto</h2>
		<div class="row justify-center flex-grow">
			<div class="col-md-8 bg-gray-100 p-6 rounded-lg shadow-md">
				{{ form_start(form) }}
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div class="mb-4">
						<label class="block text-lg font-medium text-gray-700">{{ form_label(form.firstName, 'Vorname') }}</label>
						{{ form_widget(form.firstName, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm bg-gray-200 text-gray-900 text-lg', 'readonly': 'readonly'}}) }}
						{{ form_errors(form.firstName) }}
					</div>

					<div class="mb-4">
						<label class="block text-lg font-medium text-gray-700">{{ form_label(form.lastName, 'Nachname') }}</label>
						{{ form_widget(form.lastName, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm bg-gray-200 text-gray-900 text-lg', 'readonly': 'readonly'}}) }}
						{{ form_errors(form.lastName) }}
					</div>

					<div class="mb-4">
						<label class="block text-lg font-medium text-gray-700">{{ form_label(form.email, 'E-Mail') }}</label>
						{{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm bg-gray-200 text-gray-900 text-lg', 'readonly': 'readonly'}}) }}
						{{ form_errors(form.email) }}
					</div>

					<div class="mb-4">
						<label class="block text-lg font-medium text-gray-700">{{ form_label(form.address, 'Adresse') }}</label>
						{{ form_widget(form.address, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm bg-gray-200 text-gray-900 text-lg', 'readonly': 'readonly'}}) }}
						{{ form_errors(form.address) }}
					</div>

					<div class="mb-4">
						<label class="block text-lg font-medium text-gray-700">{{ form_label(form.postalCode, 'Postleitzahl') }}</label>
						{{ form_widget(form.postalCode, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm bg-gray-200 text-gray-900 text-lg', 'readonly': 'readonly'}}) }}
						{{ form_errors(form.postalCode) }}
					</div>

					<div class="mb-4">
						<label class="block text-lg font-medium text-gray-700">{{ form_label(form.city, 'Stadt') }}</label>
						{{ form_widget(form.city, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm bg-gray-200 text-gray-900 text-lg', 'readonly': 'readonly'}}) }}
						{{ form_errors(form.city) }}
					</div>

					<div class="mb-4">
						<label class="block text-lg font-medium text-gray-700">{{ form_label(form.plainPassword.first, 'Passwort') }}</label>
						{{ form_widget(form.plainPassword.first, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm bg-gray-200 text-gray-900 text-lg', 'readonly': 'readonly'}}) }}
						{{ form_errors(form.plainPassword.first) }}
					</div>

					<div class="mb-4">
						<label class="block text-lg font-medium text-gray-700">{{ form_label(form.plainPassword.second, 'Passwort wiederholen') }}</label>
						{{ form_widget(form.plainPassword.second, {'attr': {'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm bg-gray-200 text-gray-900 text-lg', 'readonly': 'readonly'}}) }}
						{{ form_errors(form.plainPassword.second) }}
					</div>
				</div>
				<div class="mt-6 flex justify-end space-x-4">
					<button type="button" class="bg-gray-500 text-white py-2 px-4 rounded-md hover:bg-gray-600" id="edit-button">Bearbeiten</button>
					<button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600" id="save-button" style="display: none;">Speichern</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>

	{% block javascripts %}
		<script src="{{ asset('js/account.js') }}"></script>
	{% endblock %}
{% endblock %}
